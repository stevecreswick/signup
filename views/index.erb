<h3>Signups</h3>


<div id="form-container">

</div>

<form id="create-signup" action="/api/signups" method="post">
  <div class="row">
    <div class="three columns">
        <label for="signup[name]">Name:</label>
        <p class="error name-error">Please enter your name</p>
        <input type="text" name="signup[username]" class="name-input">
    </div>
    <div class="three columns">
        <label for="signup[email]">Email:</label>
        <p class="error email-error">Not a valid email</p>
        <input type="text" name="signup[email]"  class="email-input">
    </div>
    <div class="three columns">
        <label for="signup[phone_number]">Phone Number:</label>
        <p class="error phone-error">Error Message</p>
        <input type="integer" name="signup[phone_number]"  class="phone-input">
    </div>
</div>
  <div class="row">
    <input type="submit" id="new-signup" value="Sign Up">
  </div>
</form>

<table class="u-full-width">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone Number</th>
      <th>Remove</th>
    </tr>
  </thead>

  <tbody id="signups-list">

  </tbody>

</table>


